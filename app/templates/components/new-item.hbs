<h2>Create New Item</h2>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title: </label>
      {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="description">Description: </label>
      {{textarea value=description id="description" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="price">Price: </label>
      {{input value=price id="price" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image: </label>
      {{input value=image id="image" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="detail">Detail: </label>
      {{input value=detail id="detail" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="quantity">Quantity: </label>
      {{input value=quantity id="quantity" class="form-control"}}
    </div>

    <button {{action 'saveItem'}}  class="btn btn-success btn-sm"> Save </button>
  </form>
</div>
